using NemerleDoc;

class Nemerledoc {
  public static Main(arg : array [ string ]) : void
  {
    def tree = DataTree();
    foreach (file in arg)
    {
      when (file.EndsWith(".dll") || file.EndsWith(".exe"))
        AssemblyAnalyzer.analyze(file, tree);
        
      when (file.EndsWith(".xml"))
        XmlDocAnalyzer.start(tree, file);
      
      tree.AddSource(file);
    }
    tree.indexPage();
    tree.infoPages();
  }
}
