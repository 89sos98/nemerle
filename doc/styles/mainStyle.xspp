  <html>
    <head>
      <title> v{title} </title>
      <link rel="stylesheet" href="styles/style.css" />
      <link rel="icon" href="styles/nemerle-icon.png" type="image/png" />
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
      <meta name="Description" content="Homepage of Nemerle, a functional language for .NET" />
      <meta name="Language" content="en" />
      <meta name="Keywords" content="Nemerle, functional, object-oriented, language, .NET" />
      <meta name="Author" content="University of Wroclaw" />
    </head>
    <body>

      <table class="outer-menu">
        <tr>
          <td>
            <table class="menu">
              <tr>
                <td align="left"> 
                  <a href="index.html"> "Home" </a> " :: "
                  <a href="download.html"> "Download" </a> " :: "
                  <a href="documentation.html"> "Documentation" </a> " :: "
                  <a href="contact.html"> "Contact" </a> " :: "
                  <a href="wiki/index.php"> "Wiki" </a> " :: "
                  <a href="blog/"> "Blog" </a> " :: "
                  <a href="bugs/"> "Bugs" </a>
                </td>
                <td align="right">
                  <a href="#top-of-page"> "Top" </a> " :: "
                  <a href="#bottom-of-page"> "Bottom" </a>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <a name="top-of-page" />

      <table class="title" width="100%">
        <tr>
          <td align="left">
            <h1> apply select = "title"; </h1>
            apply select = "friendly";
          </td>
          <td align="right" valign="top">
            <table class="google">
              <tr>
                <td align="left">
                  <form class="google" method="get" action="http://www.google.com/u/nemerle">
                    <span class="google">
                    <a href="http://www.google.com">
                    <font color="#0039b6">"G"</font>
                    <font color="#c41200">"o"</font>
                    <font color="#f3c518">"o"</font>
                    <font color="#0039b6">"g"</font>
                    <font color="#30a72f">"l"</font>
                    <font color="#c41200">"e"</font>
                    </a>
                    </span>
                    " search:" <br/>
                    <input type="text" name="q" size="20" maxlength="255" value="" />
                    <input type="hidden" name="domains" value="nemerle.org" />
                    <input type="hidden" name="sitesearch" value="nemerle.org" checked="checked" />
                    <input type="hidden" name="sa" value="Go!" />
                  </form>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      apply select = "motto";

      <ul class="toc">
        apply mode = "toc" select = "section";
      </ul>

      apply select = "section";

      <hr width="90%" size="1" noshade="noshade" />
      <div class="copyright">
        <a href="/license.html">
          "Copyright " e{#xA9} " 2003, 2004 University of Wroclaw" 
        </a><br/>
        <a href="http://validator.w3.org/check/referer">"Valid XHTML1"</a> " :: "
        <a href="http://jigsaw.w3.org/css-validator/">"Valid CSS2"</a>
      </div>
      <a name="bottom-of-page" />
      
    </body>
  </html>
}
