
using Nemerle.IO;

[Record]
public struct TestStruct
{
  public mutable x : int;
  public mutable y : int;
}

public module Test
{
  test_passing_around (s : TestStruct) : void
  {
    printf ("%i %i\n", s.x, s.y);
    ++s.x;
  }
  
  Main () : void
  {
    def s = TestStruct (10, 20);

    test_passing_around (s);
    test_passing_around (s);
  }
}

