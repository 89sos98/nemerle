
namespace Sioux
{
    class Logger {

        private fp : System.IO.StreamWriter;

        public this ()
        {
            fp <- System.IO.StreamWriter ("/tmp/httpd.log", true);
            log ("-- Start --");
        }

        public destroy () : void
        {
            fp.Close ();
        }

        public log (msg : string) : void
        {
            fp.WriteLine (msg);
            fp.Flush ();
        }
    }
}
