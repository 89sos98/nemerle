open Nemerle.Compiler;

namespace Nemerle.Compiler {

public class Location 
  {
    public file : string;
    public line : int;
    public column : int;
  }
  
public class Located
  {
    public mutable loc : Location;
    public this () {}
    public this (loc : Location) { this.loc <- loc }
  }

public variant Modifier 
  {
    | Mod_public
    | Mod_private
    | Mod_new
    | Mod_protected
    | Mod_internal
    | Mod_abstract
    | Mod_virtual
    | Mod_sealed
    | Mod_static
    
    | Mod_module
    | Mod_struct
    | Mod_macro
    | Mod_attribute { attrs : list(Parsetree.Expr); }
  }
  
public variant Literal
  {
    | L_void
    | L_null
    | L_int { val : int; }
    | L_string { val : string; }
    | L_float { val : int; }
    | L_char { val : char; }
    | L_bool { val : bool; }
  }

public variant Val_kind
  {
    | Val_normal
    | Val_extern { name : string; }
  }
  
public variant Fun_body
  {
    | FB_parsed_expr { expr : Parsetree.Expr; }
    | FB_typed_expr { expr : Typedtree.Expr; }
    | FB_extern { name : string; }
    | FB_abstract  // for interafce method
  }

public variant Fun_kind
  {
    | FK_method { f_implements : list (string); }
    | FK_bound_method { f_implements : list (IMethod); }
    | FK_ctor
    | FK_static_ctor
    | FK_function
    | FK_iface_method { new_flag : bool; }
  }


} // Nemerle.Compiler
