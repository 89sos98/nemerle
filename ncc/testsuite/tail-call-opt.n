module M {
  Main () : void {
    mutable sum <- 0;
    for (mutable i <- 0; i < 2000000; i <- i + 1)
      sum <- sum + 3;
    printf ("%d\n", sum);
    mutable i <- 0;
    while (i < 2000000) {
      sum <- sum + 7;
      i <- i + 1
    };
    printf ("%d\n", sum);
    def loop (acc, n) {
      if (n < 2000000)
        loop (acc + 6, n + 1)
      else
        acc
    };
    sum <- loop (sum, 0);
    printf ("%d\n", sum);
  }
}

