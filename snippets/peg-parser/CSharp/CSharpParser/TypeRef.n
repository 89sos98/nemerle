using System;
using SCG = System.Collections.Generic;

using Nemerle.Assertions;
using Nemerle.Utility;
using Nemerle.Peg;

namespace CSharpParser
{
  [Record]
  public variant TypeRef : Located
  {
    | BuiltIn {
      name : string;
    }
    | Name {
      name : Expr;
    }
    | Array {
      baseType : TypeRef;
      dim : int;
    }
    | Generic {
      baseType : TypeRef;
      dim : int;
    }
    | Pointer {
      baseType : TypeRef;
    }
  }
}