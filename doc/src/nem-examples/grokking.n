class ArraysTest {
  static reverse_array (ar : array <int>) : void
  {
    def loop (left, right) {
      when ((left : int) < right) {
        def tmp = ar[left];
        ar[left] = ar[right];
        ar[right] = tmp;
        loop (left + 1, right - 1)
      }
    }
    loop (0, ar.Length - 1)
  }

  static print_array (ar : array <int>) : void
  {
    for (mutable i = 0; i < ar.Length; ++i)
      Nemerle.IO.printf ("%d\n", ar[i])
  }

  static Main () : void
  {
    def ar = array [1, 42, 3];
    print_array (ar);
    Nemerle.IO.printf ("\n");
    reverse_array (ar);
    print_array (ar);
  }
