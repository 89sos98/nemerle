    def g (x)
    {
      comp enumerable
      {
        mutable i = 0;
        while (i < x)
        {
          yield i;
          i ++;
        }
      }
    }
    
    def upTo (n : int) : IEnumerable [int]
    {
      comp enumerable
      {
        mutable i = 0;
        while (i < n)
        {
          i ++;
          yield i
        }
      }
    }

    def manyTimes : IEnumerable [int] =
      comp enumerable
      {
        yieldcomp (upTo (2));   // 1 2
        yield 100;                   // 100
        yieldcomp (upTo (3));   // 1 2 3
        yield 100;                   // 100
        yieldcomp (upTo (10)); // 1 2 3 .. 10
      }
    
    def _testIf (n)
    {
      comp enumerable
      {
        if (n > 5) (); else ();
        if (n > 5) { yield 10; } else ();
        
        when (n > 5) ();
        when (n > 5) yield 10;
        
        unless (n > 5) ();
        unless (n > 5) yield 10;
      }
    }
    
    def _testWhile (n)
    {
      comp enumerable
      {
        mutable i1 = 0;
        mutable i2 = 0;
        
        while (i1 < n) i1 ++;
        while (i2 < n)
        { 
          yield i2; 
          i2 ++; 
          yieldcomp manyTimes 
        }
      }
    }
    
    def _testMatching (n)
    {
      comp enumerable
      {
        match (n)
        {
          | x when x > 5 => ();
          | _ => ();
        }
        match (n)
        {
          | x when x > 5 => yield 10;
          | _ => yield 5;
        }
      }
    }
    
    def _testForeach (coll : IEnumerable[_])
    {
      comp enumerable
      {
        foreach (x in coll)  ignore (x);
        foreach (x in coll)  yield (x + 5)
      }
    }
    
    def _testFor (n)
    {
      comp enumerable
      {
        for (mutable x = 0; x < n; x ++) ignore (x);
        for (mutable x = 0; x < n; x ++) yield (2 * x);
        
        mutable x = 0;
        
        for (; false;) ignore (x);
        for (; false;) yield (2 * x);
      }
    }
    
    def _testRepeat (n)
    {
      comp enumerable
      {
        repeat (n) ();
        repeat (n) yield n;
      }
    }
    
