using Nemerle;
module M {
  public Main () : void {
    mutable i = 3;
    def loop () { IO.printf ("I have colorful dreams!\n"); };
    
    while (i > 0) { IO.printf ("%d\n", i); --i; loop (); };

    for (mutable i = 0; i < 5; ++i) {
      mutable j = 1;
      while (j == 1) {
        IO.printf("for %d\n", i);
        j = 0;
      }
    };
    for (mutable j = 3; j > 0; --j) {
      IO.printf ("f %d\n", j);
    };

    def arr = array (5);
    arr[3] = 4;
    foreach (i : int in arr) {
      IO.printf ("%d", i + 1);
    };
    def f () { IO.printf ("dd "); };
    def g () { IO.printf ("gg\n"); };
    def arr = array [f, g];
    foreach (str : void -> void in arr) str ();
  }
}

