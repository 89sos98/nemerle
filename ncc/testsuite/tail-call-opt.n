module M {
  Main () : void {
    mutable sum <- 0;
    for (mutable i <- 0; i < 10000; i <- i + 1)
      sum <- i * 3;
    printf ("%d\n", sum);
    mutable i <- 0;
    while (i < 10000) {
      sum <- i * 7;
      i <- i + 1
    };
    printf ("%d\n", sum);
    def loop (acc, n) {
      if (n < 10000)
        loop (acc + n * 6, n + 1)
      else
        acc
    };
    sum <- loop (sum, 0);
    printf ("%d\n", sum);
  }
}

