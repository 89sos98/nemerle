
public variant option ('a)
  {
    | None
    | Some { val : 'a; }
  }

module Option {
  public type t ('a) = option ('a);

  public 'a, 'b map (f : 'a -> 'b, x : t ('a)) : t ('b) {
    match (x) {
      | Some (x) => Some (f (x))
      | None => None ()
    }
  }
  
  public 'a is_some (x : t ('a)) : bool {
    match (x) {
      | Some => true
      | _ => false
    }
  }
  
  public 'a is_none (x : t ('a)) : bool {
    match (x) {
      | None => true
      | _ => false
    }
  }  

  public 'a unsome (x : t ('a)) : 'a {
    match (x) {
      | Some (x) => x
      | None =>
        raise Invalid_argument ("Option.unsome")
    }
  }
}

