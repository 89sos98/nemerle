    mutable i <- 5;
    while (i > 0) { print_endline (string_of_int (i)); i <- i - 1; };

    for (mutable i <- 0; i < 5; i <- i + 1) {
      printf("for %d\n", i);
    };
    mutable j <- 3;
    for (;j > 0;) {
      printf ("f %d\n", j);
      j <- j - 1;
    };

//    if (true) 1 else ();
  }
}

