using Nemerle.Compiler;

namespace Nemerle.Compiler {

  public class Location 
  {
    public file : string;
    public line : int;
    public column : int;
    public mutable comment : string;
  }
  
  public class Located
  {
    internal static default_loc : Location;

    static this () { default_loc <- Location ("created at compile-time", 0, 0, null) }

    public mutable loc : Location;
    public this () { loc <- default_loc; }
    public this (loc : Location) { this.loc <- loc }
  }

  public variant Modifier 
  {
    | Mod_public
    | Mod_private
    | Mod_new
    | Mod_protected
    | Mod_internal
    | Mod_abstract
    | Mod_virtual
    | Mod_sealed
    | Mod_static
    | Mod_override
    | Mod_mutable
    
    | Mod_module
    | Mod_struct
    | Mod_macro
    | Mod_attribute {
        mutable attrs : list <Parsetree.Expr>; 
        mutable macro_attrs : list <Parsetree.Expr>; 
      }
  }
  
  public variant Literal
  {
    | L_void
    | L_null
    | L_string { val : string; }
    | L_float { val : float; }
    | L_double { val : System.Double; }
    | L_decimal { val : System.Decimal; }
    | L_char { val : char; }
    | L_bool { val : bool; }
    | L_sbyte { val : System.SByte; }
    | L_byte { val : System.Byte; }
    | L_short { val : System.Int16; }
    | L_ushort { val : System.UInt16; }
    | L_int { val : int; }
    | L_uint { val : System.UInt32; }
    | L_long { val : System.Int64; }
    | L_ulong { val : System.UInt64; }

    | L_enum { val : Literal; ty : System.Type; }
  }

  public variant Fun_body
  {
    | FB_parsed_expr { expr : Parsetree.Expr; }
    | FB_typed_expr { expr : Typedtree.Expr; }
    | FB_compiled_expr
    | FB_extern { name : string; }
    | FB_abstract  // for interface method
  }

  public variant Fun_kind
  {
    | FK_method { f_implements : list <Parsetree.Splicable_string>; }
    | FK_bound_method { f_implements : list <IMethod>; }
    | FK_ctor
    | FK_static_ctor
    | FK_function
    | FK_iface_method { new_flag : bool; }
  }


} // Nemerle.Compiler
