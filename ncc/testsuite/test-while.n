module M {
  public Main () : void {
    mutable i <- 3;
    def loop () { printf ("I have colorful dreams!\n"); };
    
    while (i > 0) { printf ("%d\n", i); --i; loop (); };

    for (mutable i <- 0; i < 5; ++i) {
      mutable j <- 1;
      while (j == 1) {
        printf("for %d\n", i);
        j <- 0;
      }
    };
    for (mutable j <- 3; j > 0; --j) {
      printf ("f %d\n", j);
    };

    def arr = array (5);
    arr[3] <- 4;
    foreach (i : int in arr) {
      printf ("%d", i + 1);
    };
    printf ("\n");
  }
}

