
module M {
  public Main () : void {
    print_endline ("Testing the assertions...");
    
    mutable i <- 10;
    
    try
      assert (i == 10)    
    with e : Assertion_failed => 
      print_endline ("Assertion number 1 failed");

    i <- 20;

    try
      assert (i == 20)
    with e : Assertion_failed => 
      print_endline ("Assertion number 2 failed");

    try
      assert (i == 19) 
    with e : Assertion_failed => 
      print_endline ("Assertion number 3 failed");
  }
}

