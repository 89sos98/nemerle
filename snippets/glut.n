using System;
using Tao.Glut;
using Tao.OpenGl;

namespace Redbook {

    /// <summary>
    ///     This program demonstrates the use of the GL lighting model.  Objects are drawn
    ///     using a grey material characteristic.  A single light source illuminates the
    ///     objects.
    /// </summary>
    /// <remarks>
    ///     <para>
    ///         Original Author:    Silicon Graphics, Inc.
    ///         http://www.opengl.org/developers/code/examples/redbook/scene.c
    ///     </para>
    ///     <para>
    ///         C# Implementation:  Randy Ridge
    ///         http://www.randyridge.com/Tao/Default.aspx
    ///     </para>
    /// </remarks>

    public sealed class Scene {
        // --- Entry Point ---

        public static Main() : void {
            Glut.glutInit();
            Glut.glutInitDisplayMode(/*Glut.GLUT_SINGLE  %| Glut.GLUT_RGB %| */ Glut.GLUT_DEPTH);
            Glut.glutInitWindowSize(500, 500);
            ignore (Glut.glutCreateWindow("Scene"));
            Init();
            Glut.glutDisplayFunc(Glut.DisplayCallback(Display));
            Glut.glutKeyboardFunc(Glut.KeyboardCallback(Keyboard));
            Glut.glutReshapeFunc(Glut.ReshapeCallback(Reshape));
            Glut.glutMainLoop();
        }


        // --- Application Methods ---

        private static Init() : void {
            def lightAmbient = array [ 0.0, 0.0, 0.0, 1.0 ];
            def lightDiffuse = array [ 1.0, 1.0, 1.0, 1.0 ];
            def lightSpecular = array [ 1.0, 1.0, 1.0, 1.0 ];
            // light_position is NOT default value
            def lightPosition = array [ 1.0, 1.0, 1.0, 0.0 ];

            Gl.glLightfv(Gl.GL_LIGHT0, Gl.GL_AMBIENT, lightAmbient);
            Gl.glLightfv(Gl.GL_LIGHT0, Gl.GL_DIFFUSE, lightDiffuse);
            Gl.glLightfv(Gl.GL_LIGHT0, Gl.GL_SPECULAR, lightSpecular);
            Gl.glLightfv(Gl.GL_LIGHT0, Gl.GL_POSITION, lightPosition);

            Gl.glEnable(Gl.GL_LIGHTING);
            Gl.glEnable(Gl.GL_LIGHT0);
            Gl.glEnable(Gl.GL_DEPTH_TEST);
        }


        // --- Callbacks ---

        private static Display() : void {
            Gl.glClear(Gl.GL_COLOR_BUFFER_BIT /*%| Gl.GL_DEPTH_BUFFER_BIT */);

            Gl.glPushMatrix();
                Gl.glRotatef(20.0, 1.0, 0.0, 0.0);

                Gl.glPushMatrix();
                    Gl.glTranslatef(-0.75, 0.5, 0.0); 
                    Gl.glRotatef(90.0, 1.0, 0.0, 0.0);
                    Glut.glutSolidTorus(d(0.275), d(0.85), 15, 15);
                Gl.glPopMatrix();

                Gl.glPushMatrix();
                    Gl.glTranslatef(-0.75, -0.5, 0.0); 
                    Gl.glRotatef(270.0, 1.0, 0.0, 0.0);
                    Glut.glutSolidCone(d(1.0), d(2.0), 15, 15);
                Gl.glPopMatrix();

                Gl.glPushMatrix();
                    Gl.glTranslatef(0.75, 0.0, -1.0); 
                    Glut.glutSolidSphere(d(1.0), 15, 15);
                Gl.glPopMatrix();
            Gl.glPopMatrix();
            Gl.glFlush();
        }



        private static Keyboard(key : System.Byte, _x : int, _y : int) : void {
            match (System.Convert.ToInt32 (key)) {
              |  27 =>
                    Environment.Exit(0);
              | _ => () 
            }
        }

        static d (x : float) : System.Double { System.Convert.ToDouble (x) }
        static f (x : int) : float { System.Convert.ToSingle (x) }

        private static Reshape(w : int, h : int) : void {
            Gl.glViewport(0, 0, w, h);
            Gl.glMatrixMode(Gl.GL_PROJECTION);
            Gl.glLoadIdentity();
            if(w <= h) {
                Gl.glOrtho(d(-2.5), d(2.5), d(-2.5 * f(h) / f(w)), 
                           d(2.5 * f(h) / f(w)), d(-10.0), d(10.0));
            }
            else {
                Gl.glOrtho(d(-2.5 * f(w) / f(h)), 
                           d(2.5 * f(w) / f(h)), d(-2.5), 
                           d(2.5), d(-10.0), d(10.0));
            };
            Gl.glMatrixMode(Gl.GL_MODELVIEW);
            Gl.glLoadIdentity();
        }

    }
}
