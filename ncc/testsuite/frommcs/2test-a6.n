//
delegate S () :  void;
using System;

class X {
	static Main () :  int
	{
		mutable  i = Nemerle.Extensions.DefaultValue (int);
		mutable  b = null : S;
		
		for (i = 0; i < 10; i++){
			mutable  j = 0;
			b = fun() {
				Console.WriteLine ("i={0} j={1}", i, j);
				i = i + 1;
				j = j + 1;
			};
		}
		b ();
		Console.WriteLine ("i = {0}", i);
		if (!t (i, 11))
		{
			 1;
		}
		else
	{
	{
		b ();
		if (!t (i, 12))
		{
			 2;
		}
		else
	{
	{
		Console.WriteLine ("i = {0}", i);
		 0;
	}
	}
	}
	}
	}

	static t (mutable  a : int,mutable  b :  int) :  bool
	{
		 a == b;
	}
}
